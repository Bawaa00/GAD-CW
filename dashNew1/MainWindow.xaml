<Window x:Class="dashNew1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dashNew1"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal" 
        TextOptions.TextRenderingMode="Auto"        
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="700" Width="1300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid x:Name="headPanel" VerticalAlignment="Top" Height="50" Background="#12005e">
            <Button
                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                HorizontalAlignment="Right" VerticalAlignment="Center" Background="#12005e"
                ToolTip="MaterialDesignFloatingActionMiniButton" Margin="0,5,83.6,5"
                AllowDrop="True" Height="40" Width="40">
                <materialDesign:PackIcon Kind="AccountCircleOutline" Foreground="White" Height="38" Width="38" Margin="0"
                                         Background="{x:Null}"/>
            </Button>


        </Grid>
        <Grid x:Name="sidePanel" HorizontalAlignment="Left" Width="228" Background="#4a148c" MouseDown="SidePanel_MouseDown" Margin="0,0,0,0.4">
            <ToggleButton
                        Style="{DynamicResource MaterialDesignHamburgerToggleButton}" Foreground="White" VerticalAlignment="Top"
                        HorizontalAlignment="Right" Margin="5" Height="40" Width="40" Click="collapse" />
            <StackPanel Height="600" VerticalAlignment="Bottom">
                <TextBlock x:Name="Dashboard" Height="50" Background="#7c43bd" Margin="3" MouseEnter="Dashboard_MouseEnter"><InlineUIContainer>
                        <materialDesign:PackIcon Kind="ViewDashboard" Margin="5" Height="40" Width="40"
                            Foreground="White"/>
                    </InlineUIContainer><Run BaselineAlignment="Center" Foreground="White" FontSize="23" Text="   Dashboard"/></TextBlock>
                <TextBlock x:Name="Cars" Background="#7c43bd" Height="50" Margin="3">
                    <InlineUIContainer>
                        <materialDesign:PackIcon Kind="CarSports" Margin="5" Height="40" Width="40"
                            Foreground="White"/>
                    </InlineUIContainer><Run BaselineAlignment="Center" Foreground="White" FontSize="23" Text="   Vehicles"/>
                </TextBlock>
                <TextBlock x:Name="Customers" Background="#7c43bd" Height="50" Margin="3">
                    <InlineUIContainer>
                        <materialDesign:PackIcon Kind="HumanGreeting" Margin="5" Height="40" Width="40"
                            Foreground="White"/>
                    </InlineUIContainer><Run BaselineAlignment="Center" Foreground="White" FontSize="23" Text="   Customers"/>
                </TextBlock>
                <TextBlock x:Name="driver" Background="#7c43bd" Height="50" Margin="3">
                    <InlineUIContainer>
                        <materialDesign:PackIcon Kind="CardAccountDetails" Margin="5" Height="40" Width="40"
                            Foreground="White"/>
                    </InlineUIContainer><Run BaselineAlignment="Center" Foreground="White" FontSize="23" Text="   Drivers"/>
                </TextBlock>
                <TextBlock x:Name="services" Background="#7c43bd" Height="50" Margin="3">
                    <InlineUIContainer>
                        <materialDesign:PackIcon Kind="ProgressWrench" Margin="5" Height="40" Width="40"
                            Foreground="White"/>
                    </InlineUIContainer><Run BaselineAlignment="Center" Foreground="White" FontSize="23" Text="   Services"/>
                </TextBlock>
                <TextBlock x:Name="maintenance" Background="#7c43bd" Height="50" Margin="3">
                    <InlineUIContainer>
                        <materialDesign:PackIcon Kind="HammerWrench" Margin="5" Height="40" Width="40"
                            Foreground="White"/>
                    </InlineUIContainer><Run BaselineAlignment="Center" Foreground="White" FontSize="23" Text="   Maintenance"/>
                </TextBlock>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
